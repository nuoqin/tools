<UserControl x:Class="code_tools.view.HomeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:code_tools.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Margin="5" Grid.Column="0" Background="#FFC5C5C5" VerticalAlignment="Stretch" CornerRadius="12">
            <Label Content="MD5" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFFBF5F5"></Label>
        </Border>
        <Border Margin="5" Grid.Column="1" Background="#FF7C54A0" VerticalAlignment="Stretch" CornerRadius="12">
            <Label Content="JSON" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFFBF5F5"></Label>
        </Border>
        <Border Margin="5" Grid.Column="2" Background="#FF83CD80" VerticalAlignment="Stretch" CornerRadius="12">
            <Label Content="日期" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFFBF5F5"></Label>
        </Border>
        <Border Margin="5" Grid.Column="3" Background="#FFEE9246" VerticalAlignment="Stretch" CornerRadius="12">
            <Label Content="base64" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFFBF5F5"></Label>
        </Border>
        <Border Margin="5" Grid.Column="4" Background="#FF46B4EE" VerticalAlignment="Stretch" CornerRadius="12">
            <Label Content="XML工具" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFFBF5F5"></Label>
        </Border>
        <Border Margin="5" Grid.Row="1" Grid.Column="0" Background="#FFEE9246" VerticalAlignment="Stretch" CornerRadius="12">
            <Label Content="websocket" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFFBF5F5"></Label>
        </Border>

        <Border Margin="5" Grid.Row="1" Grid.Column="1" Background="#FF83CD80" VerticalAlignment="Stretch" CornerRadius="12">
            <Label Content="URL编解码" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFFBF5F5"></Label>
        </Border>
        <Border Margin="5" Grid.Row="1" Grid.Column="2" Background="#FF7C54A0" VerticalAlignment="Stretch" CornerRadius="12">
            <Label Content="yaml" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFFBF5F5"></Label>
        </Border>
        <Border Margin="5" Grid.Row="1" Grid.Column="3" Background="#FF54A089" VerticalAlignment="Stretch" CornerRadius="12">
            <Label Content="二维码工具" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFFBF5F5"></Label>
        </Border>
        <Grid  Grid.Row="2" Grid.ColumnSpan="5">
            <StackPanel>
                <Label Content="      作者：nuoqing"></Label>
                <Label Content="      地址：https://github.com/nuoqin/tools"></Label>
                <Label Content="      本项目主要是在windows环境，用于开发人员和 IT 人员的工具。"></Label>
            </StackPanel>
            
        </Grid>
        
    </Grid>
</UserControl>
