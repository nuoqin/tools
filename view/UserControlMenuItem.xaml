<UserControl x:Class="code_tools.view.UserControlMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:code_tools.view"
             mc:Ignorable="d" 
             d:DesignHeight="38" d:DesignWidth="140">
    <Grid>
        <Menu>
            <MenuItem x:Name="menuItem" Header="{Binding Header}" Width="140" Padding="30 0 0 0" Margin="0" FontSize="12" Click="menuClick" Height="38" Background="#FFF" Foreground="Black" BorderBrush="White" />
        </Menu>
    </Grid>
</UserControl>
