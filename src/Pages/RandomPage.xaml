<Page x:Class="nuoqin.src.Pages.RandomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:nuoqin.src.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RandomPage">

    <Grid>
        <StackPanel Margin="20,10">
            <StackPanel>
                <TextBlock Text="欢迎使用随机数生成工具" FontSize="16" FontWeight="Bold" Margin="5,10"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal"  Margin="10">
                <TextBlock Text="字符串(-): " Width="100" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <TextBox VerticalAlignment="Center"
                         Height="50" x:Name="randomStr" Width="400" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"  Margin="10">
                <TextBlock Text="字符串: " Width="100" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <TextBox x:Name="randomStrN" VerticalAlignment="Center"
                         Height="50" Width="400" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"  Margin="10">
                <TextBlock Text="数字（6位）: " Width="100" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <TextBox VerticalAlignment="Center"
                      Height="50" x:Name="randomNum6" Width="400" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"  Margin="10">
                <TextBlock Text="数字（4位）: " Width="100" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <TextBox
                     Height="50" x:Name="randomNum4" Width="400" VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"  Margin="10">
                <TextBlock Text="时间戳: " Width="100" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <TextBox VerticalAlignment="Center"
                     Height="50" x:Name="timestampStr" Width="400" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"  Margin="10">
                <TextBlock Text="时间: " Width="100" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <TextBox  x:Name="dateTimeStr" VerticalAlignment="Center" Height="50" Width="400" />
            </StackPanel>
            
            <StackPanel  Orientation="Horizontal"  Margin="10">
                <Button
                    Height="50" Width="500" Background="OrangeRed"
                    ToolTip="点击生成随机数" Click="gen">
                    <TextBlock Text="生成" />
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
