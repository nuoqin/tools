<Window x:Class="code_tools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:code_tools"
        mc:Ignorable="d" Icon="assert/tools.png"
        Title=" 编程工具助手" Height="550" Width="850" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#e8edf4">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid HorizontalAlignment="Stretch" Grid.Column="0" >
            <ScrollViewer HorizontalAlignment="Stretch"  VerticalScrollBarVisibility="Auto">
                <Border Background="#FFFFFF" Grid.Column="1" Margin="0 5 0 5" CornerRadius="5">
                    <StackPanel Margin="5" x:Name="leftMenu">
                        
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>
        <Border Background="#FFFFFF" Grid.Column="1" Margin="5 5 5 5" CornerRadius="5">
            <StackPanel x:Name="main"  HorizontalAlignment="Stretch">
               
            </StackPanel>
        </Border>
        
    </Grid>
</Window>
