<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="commonBtn" TargetType="Button">
        <Setter Property="Background" Value="#FF3A3DEF"></Setter>
        <Setter Property="Foreground" Value="#FFF"></Setter>
        <Setter Property="Width" Value="94"></Setter>
        <Setter Property="Height" Value="38"></Setter>
        <Setter Property="BorderBrush" Value="#FF3A3DEF"></Setter>
    </Style>

    <Style x:Key="commonInput" TargetType="TextBox">
        <Setter Property="Width" Value="230"></Setter>
        <Setter Property="Height" Value="38"></Setter>
        <Setter Property="Padding" Value="0 10"></Setter>
        <Setter Property="IsReadOnly" Value="False"></Setter>
    </Style>
    <Style x:Key="readOnly" TargetType="TextBox">
        <Setter Property="IsReadOnly" Value="True"></Setter>
    </Style>
</ResourceDictionary>